{
  "name": "@laughing-man-studios/lit-graph",
  "version": "0.0.1",
  "description": "A Lit Framework component for making 2D graphs",
  "main": "lit-graph.js",
  "module": "lit-graph.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint src/**/*.ts",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --write",
    "analyze": "cem analyze --litelement --globs \"src/**/*.ts\"",
    "analyze:watch": "cem analyze --litelement --globs \"src/**/*.ts\" --watch",
    "serve": "wds --watch",
    "serve:prod": "cross-env MODE=prod npm run serve",
    "test": "npm run test:build && npm run test:dev && npm run test:prod",
    "test:build": "tsc --build tsconfig.test.json",
    "test:build:watch": "tsc --project tsconfig.test.json --watch",
    "test:dev": "wtr",
    "test:watch": "wtr --watch",
    "test:prod": "cross-env MODE=prod wtr",
    "test:prod:watch": "cross-env MODE=prod wtr --watch",
    "checksize": "rollup -c ; cat my-element.bundled.js | gzip -9 | wc -c ; rm my-element.bundled.js",
    "build:package": "tsc && packito",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0"
  },
  "pre-commit": [
    "precommit-msg",
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Laughing-Man-Studios/lit-graph.git"
  },
  "keywords": [
    "Lit",
    "Graph",
    "2D"
  ],
  "author": "Robert Gibb",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Laughing-Man-Studios/lit-graph/issues"
  },
  "homepage": "https://github.com/Laughing-Man-Studios/lit-graph#readme",
  "dependencies": {
    "lit": "^2.2.4"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.6.3",
    "@open-wc/testing": "^3.1.5",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "@web/dev-server": "^0.1.31",
    "@web/dev-server-legacy": "^1.0.0",
    "@web/test-runner": "^0.13.27",
    "@web/test-runner-playwright": "^0.8.8",
    "@webcomponents/webcomponentsjs": "^2.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.15.0",
    "lit-analyzer": "^1.2.1",
    "packito": "^0.5.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.6.2",
    "rollup": "^2.73.0",
    "rollup-plugin-summary": "^1.4.3",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "~4.7.4"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
